@model BattleTechCanonWarships.Models.Event

@{
    ViewData["Title"] = Model.Title();
}


<div class="text-monospace text-muted">@Model.GetDateString()</div>
<div class="text-monospace text-muted"><a href="/Location/@Model.LocationId">@Model.Location.ToString()</a></div>

<h4>@Model.Title</h4>
<div class="text-body">
    @Model.Description 
</div>
<div class="font-weight-bold">Related Vessels</div>
<table class="table table-striped">
    @foreach (VesselEvent ve in Model.Vessels)
    {
    <tr>
        <td><a href="/Vessel/@ve.Vessel.Id.ToString()">@ve.Vessel.Name</a></td>
    </tr>
    }
</table>